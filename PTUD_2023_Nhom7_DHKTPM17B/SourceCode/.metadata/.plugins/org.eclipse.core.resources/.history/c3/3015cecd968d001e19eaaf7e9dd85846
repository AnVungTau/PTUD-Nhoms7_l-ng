package dao;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import connectDB.ConnectDB;
import entity.To;


/**
 * @author Nguyễn Thành An
 */

public class CaLam_DAO {
	public ArrayList<To> getAllCa() {
		ArrayList<To> dsCa = new ArrayList<To>();
		try {
			ConnectDB.getInstance();
			Connection con = ConnectDB.getConnection();
			String sql = "Select * from CaLam";
			Statement sta = con.createStatement();

			ResultSet rs = sta.executeQuery(sql);
			while (rs.next()) {
				String maCa = rs.getString("maca");
				String tenCa = rs.getString("tenca");
				String gioBatDau = rs.getString("giobatdau");
				String gioKetThuc = rs.getString("gioketthuc");
				float gia = rs.getFloat("gia");

				
				To cl = new To(maCa, tenCa, gioBatDau, gioKetThuc, gia);
				dsCa.add(cl);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} 
		return dsCa;
	}

}
