package dao;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import connectDB.ConnectDB;
import entity.To;


/**
 * @author Nguyễn Thành An
 */

public class To_DAO {
	public ArrayList<To> getAllTo() {
		ArrayList<To> dsCa = new ArrayList<To>();
		try {
			ConnectDB.getInstance();
			Connection con = ConnectDB.getConnection();
			String sql = "Select * from To";
			Statement sta = con.createStatement();

			ResultSet rs = sta.executeQuery(sql);
			while (rs.next()) {
				int maCa = rs.getInt("mato");
				String tenCa = rs.getString("tenca");
				int soLuongCongNhan = rs.getInt("soLuongCongNhan");

				To cl = new To(maCa, tenCa, soLuongCongNhan);
				dsCa.add(cl);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} 
		return dsCa;
	}

}
